{
  "name": "vintage-shop-backend",
  "version": "1.0.0",
  "description": "Backend API для винтажного магазина",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "postinstall": "prisma generate --schema=../prisma/schema.prisma",
    "db:generate": "prisma generate --schema=../prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=../prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema=../prisma/schema.prisma",
    "db:seed": "ts-node prisma/seed.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:ci": "vitest --run"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "prisma": "^5.2.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.1.6",
    "vitest": "^1.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
